# ============================================
# Mock Mode Configuration (No API Keys Required!)
# ============================================
# This configuration allows you to run the app without OpenAI API key
# Perfect for testing and demonstration purposes

# === Mock Mode - ENABLED ===
ENABLE_MOCK_MODE=true

# === Security (Simple keys for testing) ===
SECRET_KEY=mock_secret_key_for_development_only_32chars_minimum
OPENAI_API_KEY=sk-mock-key-for-testing-purposes-only

# === Application Settings ===
APP_ENV=development
DEBUG=false

# === Database (SQLite for easy testing) ===
DATABASE_URL=sqlite:///./test.db

# === Other Settings (Keep defaults) ===
LOG_LEVEL=INFO
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# Quick Start:
# 1. Copy this file: copy .env.mock .env
# 2. Run migrations: alembic upgrade head
# 3. Start server: python -m uvicorn backend.main:app --reload
# ============================================
