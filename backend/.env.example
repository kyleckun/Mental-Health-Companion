# ============================================
# Mental Health Companion - Environment Configuration
# ============================================
# IMPORTANT: Copy this file to .env and fill in your values
# Never commit the actual .env file with secrets!

# === Application Settings ===
APP_NAME="Mental Health Companion"
APP_VERSION=2.0.0
APP_ENV=development  # Options: development, staging, production
DEBUG=false

# === API Settings ===
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# === Security Settings (CRITICAL!) ===
# Generate SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER use default values in production!
SECRET_KEY=your_generated_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === Database Configuration ===
# Development (SQLite):
DATABASE_URL=sqlite:///./test.db
# Production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/mental_health_db

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# === OpenAI API Configuration (REQUIRED!) ===
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# === CORS Settings ===
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# === Logging Settings ===
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text
# LOG_FILE=/var/log/mental-health-companion.log  # Optional: log to file

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# === Feature Flags ===
ENABLE_REGISTRATION=true
ENABLE_MOCK_MODE=false

# ============================================
# Quick Start Guide:
# ============================================
# 1. Generate SECRET_KEY:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Get OpenAI API key:
#    https://platform.openai.com/api-keys
#
# 3. For production, use PostgreSQL:
#    DATABASE_URL=postgresql://user:pass@host:5432/dbname
#
# 4. Set APP_ENV=production and DEBUG=false for production
# ============================================
